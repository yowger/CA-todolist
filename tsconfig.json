{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@app/*": ["src/application/*"],
            "@domain/*": ["src/domain/*"],
            "@infra/*": ["src/infrastructure/*"],
            "@pres/*": ["src/presentation/*"]
        }
    }
}
